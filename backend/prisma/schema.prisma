generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AdminRole {
  ADMIN
  SUPER_ADMIN
}

enum AssetType {
  IMAGE     
  POSTER    
  GALLERY   
  RESULT    
  FACULTY   
  BANNER    
}

enum FacultyCategory {
  TEACHING
  LEADERSHIP
  MANAGEMENT
}

enum CourseCategory {
  ENTRANCE   // For UGC-NET, SLET, PhD Entrance
  ACADEMIC   // For HS, Degree (B.A, B.Sc)
}

// 2. Define Streams (Useful for HS/Degree)
enum Stream {
  SCIENCE
  ARTS
  COMMERCE
  NONE       // For Entrance exams where stream might not apply widely
}

enum VideoCategory {
  STUDENT_STORY
  ACHIEVEMENT
  ALUMNI
  INSTITUTE
  FACULTY
}

enum VideoType {
  LONG_FORM // 16:9 Aspect Ratio
  SHORT     // 9:16 Aspect Ratio (Reels/Shorts)
}

enum ActivityAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  VISIT
}

enum ActivityCategory {
  ASSET
  VIDEO
  COURSE
  BATCH
  FACULTY
  NOTIFICATION
  SYSTEM
}

model ActivityLog {
  id           String           @id @default(uuid())
  action       ActivityAction   // üè∑Ô∏è Badge: CREATE, UPDATE, DELETE
  category     ActivityCategory // üè∑Ô∏è Category: ASSET, VIDEO, etc.
  targetId     String?          // ID of the item (Course ID, Video ID)
  targetTitle  String?          // Title of the item (for easy reading)
  
  adminId      String
  adminName    String
  
  createdAt    DateTime         @default(now())

  @@index([createdAt])
  @@index([adminId])
}

model User {
  id          String   @id @default(uuid())
  phone       String   @unique
  createdAt  DateTime @default(now())
}

model Admin {
  id           String   @id @default(uuid())
  username     String   @unique
  phone        String   @unique
  passwordHash String
  role         AdminRole @default(ADMIN)

  totalVisits  Int       @default(0)
  lastLogin    DateTime?
  createdAt    DateTime @default(now())

  assets       Asset[]
  videos       Video[]
}

model Otp {
  id        String   @id @default(uuid())
  phone     String
  codeHash  String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([phone])
}

model OtpRequest {
  phone           String   @id
  ipAddress       String?
  requestCount    Int      @default(0)
  dailyCount      Int      @default(0)
  lastRequestedAt DateTime
  blockedUntil    DateTime?
  updatedAt       DateTime @updatedAt
}

model PageVisit {
  id        String   @id @default(uuid())
  path      String
  ipAddress String?
  userAgent String?
  visitedAt DateTime @default(now())

  @@index([path])
  @@index([visitedAt])
}

model Asset {
  id          String   @id @default(uuid())
  type        AssetType
  title       String?
  fileUrl     String
  mimeType    String
  size        Int      // bytes
  width       Int?
  height      Int?

  categoryGroup String?   
  subCategory   String?
  rank          String?

  createdAt   DateTime @default(now())
  uploadedBy  String

  admin Admin @relation(fields: [uploadedBy], references: [id])
  faculty     Faculty[]

  @@index([type])
}

model Video {
  id          String        @id @default(uuid())
  title       String
  videoUrl    String        // The full link
  externalId  String?       // ID from YT, Instagram, etc. for easy embedding
  description String?
  category    VideoCategory @default(INSTITUTE)
  type        VideoType     @default(LONG_FORM)
  platform    String        @default("YOUTUBE") // YOUTUBE, INSTAGRAM, VIMEO
  
  createdAt   DateTime      @default(now())
  createdBy   String
  admin       Admin         @relation(fields: [createdBy], references: [id])
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String

  // üü¢ NEW MODULAR FIELDS
  category    CourseCategory @default(ENTRANCE)
  subCategory  String?
  stream      Stream         @default(NONE)
  
  // Optional duration (e.g. "6 Months", "2 Years")
  duration    String?

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  batches     Batch[]
}

model Faculty {
  id          String   @id @default(uuid())
  name        String
  designation String
  bio         String?
  experience   Int      @default(0)
  categories   FacultyCategory[] @default([TEACHING])
  photoAssetId String?

  photo Asset? @relation(fields: [photoAssetId], references: [id])

  createdAt DateTime @default(now())
}

model Batch {
  id        String   @id @default(uuid())
  name      String
  courseId String
  startDate DateTime
  endDate   DateTime?
  isActive  Boolean  @default(true)

  course Course @relation(fields: [courseId], references: [id])

  createdAt DateTime @default(now())
}

model PageContent {
  id        String   @id @default(uuid())
  page      String   // e.g. "HOME", "ABOUT"
  section   String   // e.g. "HERO", "MISSION"
  content   String
  updatedAt DateTime @updatedAt

  @@unique([page, section])
}

model Notification {
  id        String   @id @default(uuid())
  message   String
  link      String?  // Optional: Link to a Result PDF or External Site
  type      String   @default("INFO") // INFO, ALERT, NEW
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Feedback {
  id         String   @id @default(uuid())
  name       String   // Mandatory
  comment    String?  // Optional
  rating     Int      @default(5) // 1-5 scale
  
  // üü¢ Toggle to show on Website (Direct Admin Control)
  isFeatured Boolean  @default(false) 
  
  createdAt  DateTime @default(now())
}