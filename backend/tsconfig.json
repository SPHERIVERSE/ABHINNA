{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Node.js compatibility */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Type Safety */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Source Maps */
    "sourceMap": true,

    /* Build Output */
    "declaration": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

